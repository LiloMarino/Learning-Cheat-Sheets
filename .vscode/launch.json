{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug markdown-pdf",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scripts/markdown-pdf/convert.js",
            "args": [
                "${workspaceFolder}/cheatsheets/example.md",
                "html",
                "--emoji",
                "--breaks",
                "--outdir=out"
            ]
        }
    ]
}
